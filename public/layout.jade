doctype html
html
  head
    meta(charset="UTF-8")
    title #{doc_title}
    style(type="text/css").
      html,body{width: 100%; height: 100%; overflow: hidden;border:none;margin: 0;padding: 0;}
      #container{width: 100%; height: 100%; }
      .doc_side{float: left;width: 320px;height: 100%;background: #f2f2f2;line-height: 1.7;}
      .doc_side h1,.doc_side h2,.doc_side h3,.doc_side h4{margin-left: 15px;}
      .doc_main{height: 100%;overflow: auto;zoom: 1;}
      .doc_content{padding: 25px; overflow:hidden; zoom:1;}
    link(href=css_markdown, media="all", rel="stylesheet", type="text/css")

  body
    #container
      .doc_side !{doc_index}
      .doc_main
        .doc_content.markdown-body !{doc_content}
